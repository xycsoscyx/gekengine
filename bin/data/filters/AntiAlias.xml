<?xml version="1.0"?>
<filter>
    <textures>
        <depthBuffer bind="float" source="Solid" />
    </textures>

    <defines>
        <reduceMinimum>1.0 / 128.0</reduceMinimum>
        <reduceMultiplier>1.0 / 8.0</reduceMultiplier>
        <spanMaximum>8.0</spanMaximum>
    </defines>

    <passes>
        <AntiAlias mode="deferred" entry="mainPixelProgram">
            <resources>
                <screenBuffer copy="screen" />
                <depthBuffer />
            </resources>

            <targets>
                <screen />
            </targets>
        </AntiAlias>
    </passes>
</filter>
