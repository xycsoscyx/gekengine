{
    "input": [
        {
            "name": "position",
            "format": "R32G32B32_FLOAT",
            "semantic": "POSITION"
        },
        {
            "name": "texCoord",
            "format": "R32G32_FLOAT",
            "semantic": "TEXCOORD"
        },
        {
            "name": "tangent",
            "format": "R32G32B32_FLOAT",
            "semantic": "TANGENT"
        },
        {
            "name": "biTangent",
            "format": "R32G32B32_FLOAT",
            "semantic": "BITANGENT"
        },
        {
            "name": "normal",
            "format": "R32G32B32_FLOAT",
            "semantic": "NORMAL"
        },
        {
            "name": "isFrontFacing",
            "format": "R32_INT",
            "system": "isFrontFacing"
        }
    ],
    "materials": {
        "solid": {
            "data": [
                {
                    "name": "albedo",
                    "pattern": "system",
                    "parameters": "debug"
                },
                {
                    "name": "normal",
                    "pattern": "system",
                    "parameters": "flat"
                },
                {
                    "name": "roughness",
                    "pattern": "color",
                    "parameters": 1.0
                },
                {
                    "name": "metallic",
                    "pattern": "color",
                    "parameters": 0.0
                }
            ]
        }
    },
    "textures": {
        "depthBuffer": {
            "format": "D32_FLOAT",
            "flags": "depth"
        },
        "albedoBuffer": {
            "format": "R11G11B10_FLOAT",
            "flags": "target"
        },
        "normalBuffer": {
            "format": "R8G8_UNORM",
            "flags": "target"
        },
        "finalBuffer": {
            "format": "R11G11B10_FLOAT",
            "flags": "target"
        },
        "ambientBuffer": {
            "format": "R8_UNORM",
            "flags": "target"
        },
        "gaussianBuffer": {
            "format": "R8_UNORM",
            "flags": "target"
        }
    },
    "output": "finalBuffer",
    "options": {
        "#import":  "Lighting.json",
        "AmbientOcclusion": {
            "Enable": false,
            "Radius": 1.0,
            "TapCount": 24,
            "SpiralTurns": 17.0,
            "Intensity": 2.0,
            "Bias": 0.2,
            "Epsilon": 0.01,
            "Falloff": {
                "selection": "HighQuality",
                "options": [
                    "HighQuality",
                    "HPG12",
                    "Smooth",
                    "Medium",
                    "Quick"
                ]
            },
            "GaussianRadius": 4,
            "GaussianSigma": 1.75,
            "EdgeSharpness": 0.01
        }
    },
    "passes": [
        {
            "program": "AccumulateLighting",
            "entry": "mainPixelProgram",
            "mode": "forward",
            "material": "solid",
            "lighting": true,
            "depthBuffer": "depthBuffer",
            "depthStyle": {
                "camera": "perspective",
                "clear": true
            },
            "targets": [
                "finalBuffer",
                "albedoBuffer",
                "normalBuffer"
            ],
            "clear": {
                "finalBuffer": {
                    "type": "target",
                    "value": [ 1.0, 0.0, 1.0 ]
                }
            }
        },
        {
            "enable": "AmbientOcclusion::Enable",
            "program": "AmbientCalculation",
            "entry": "mainPixelProgram",
            "resources": [
                "normalBuffer",
                "depthBuffer"
            ],
            "targets": [
                "ambientBuffer"
            ]
        },
        {
            "enable": "AmbientOcclusion::Enable",
            "program": "AmbientBlur",
            "entry": "mainPixelProgram",
            "resources": [
                "depthBuffer",
                { "ambientBuffer": "inputBuffer" }
            ],
            "targets": [
                "gaussianBuffer"
            ],
            "options": {
                "AmbientOcclusion": {
                    "BlurAxis": [ 1, 0 ]
                }
            }
        },
        {
            "enable": "AmbientOcclusion::Enable",
            "program": "AmbientBlur",
            "entry": "mainPixelProgram",
            "resources": [
                "depthBuffer",
                { "gaussianBuffer": "inputBuffer" }
            ],
            "targets": [
                "ambientBuffer"
            ],
            "options": {
                "AmbientOcclusion": {
                    "BlurAxis": [ 0, 1 ]
                }
            }
        },
        {
            "enable": "AmbientOcclusion::Enable",
            "program": "AmbientLighting",
            "entry": "mainPixelProgram",
            "resources": [
                "ambientBuffer",
                "albedoBuffer"
            ],
            "blendState": {
                "enable": true,
                "colorSource": "One",
                "colorDestination": "One",
                "colorOperation": "Add"
            },
            "targets": [
                "finalBuffer"
            ]
        }
    ]
}
